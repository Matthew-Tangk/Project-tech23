<%- include('partials/head.ejs') %>
  <body>
    <header></header>
    <main>
      <h2 id="uploadHeader">
        Please select up to three files that showcase your skill level and
        experience and upload these in the box below
      </h2>

    <div id="container">
        <form id="uploadForm" action="/upload" method="POST" enctype="multipart/form-data">
          <input type="file" name="files" id="fileInput" multiple style="display: none;" />
          <label for="fileInput" id="uploadButton">Upload files here</label>
        </form>
      </div>
      <a href="./finish">
        <button id="confirm">Confirm answers and apply</button>
      </a>
    </main>
    <footer></footer>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
          document.getElementById("uploadButton").addEventListener("click", function() {
            document.getElementById("fileInput").click();
          });
        });
      </script>
  </body>
</html>

